{
    "manifest_version": 3,
    "name": "Budget Buddy",
    "version": "1.0",
    "description": "Seamlessly reference and update your budget while shopping online.",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],   
        "js": ["content.bundle.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["content.css"],
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  